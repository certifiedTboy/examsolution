			<% if(allPosts.length > 0){ %>
				<h3 class="user_notification">Recent Posts By :  <%= user.username %></h3>
				<% allPosts.forEach(function(data){ %>
            <div class="well">
                <h3><%= data.course %> - <%= data.code %></h3>
                <div class="caption-full">
                    <h3 class="faculty">Faculty: <%= data.faculty %> </h3>
						<h5>Department: <%= data.department %></h5>
						<p class="topic">Topic: <%= data.topic %></p>
                  </div>
            </div>
			<div style="float: right; margin-top: ;">
